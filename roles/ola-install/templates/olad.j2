[Unit]
Description=OpenLighting Alliance Daemon
BindsTo=dev-video0.device
After=multi-user.target dev-video0.device

[Service]
Type=Simple
User=olad
ExecStart=/usr/local/bin/olad --syslog --log-level 3 --config-dir /etc/ola
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target