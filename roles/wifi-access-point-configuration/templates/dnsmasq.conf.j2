# Use interface wlan0
interface=wlan0

#Explicitly specify the address to listen on 
listen-address={{ rpi_wlan_ip_prefix }}1

# Bind to the interface to make sure we aren't sending things elsewhere 
bind-interfaces

# Don't forward short names 
domain-needed

# Never forward addresses in the non-routed address spaces. 
bogus-priv

# Assign DHCP IP addresses
dhcp-range={{ rpi_wlan_ip_prefix }}{{ dhcp_range_from | default('50') }},{{ rpi_wlan_ip_prefix }}{{ dhcp_range_from_to | default('200') }},{{ dhcp_lease | default('2h') }}